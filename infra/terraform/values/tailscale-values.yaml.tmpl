# Tailscale Operator Helm values - minimal configuration
# OAuth authentication for MagicDNS service exposure

oauth:
  # Reference precreated secret to avoid putting credentials in values
  existingSecret: operator-oauth

operatorConfig:
  defaultProxyClass: ""
  # Disable operator tags to avoid ACL configuration requirements
  operatorTags: ""

# keep defaults minimal; we'll use Service annotations to expose the app
