# Tailscale Operator Helm values - minimal configuration
# OAuth authentication for MagicDNS service exposure
# Tailscale namespace excluded from Kyverno security policies

oauth:
  # Create the secret with credentials inline
  clientId: ${client_id}
  clientSecret: ${client_secret}

operatorConfig:
  defaultProxyClass: ""
  # Use empty tags to avoid ACL configuration requirements
  defaultTags: []
